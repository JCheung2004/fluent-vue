{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "outDir": "dist",
    "typeRoots": [
      "node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "baseUrl": "./",
  "include": [
    "src",
    "types"
  ]
}
